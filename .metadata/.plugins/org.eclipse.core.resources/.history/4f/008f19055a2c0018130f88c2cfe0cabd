#include <msp430.h> 


/**
 * main.c
 * 仿真WISP闪灯模式，利用中断技巧
 */
int main(void)
{
	WDTCTL = WDTPW | WDTHOLD;	            // stop watchdog timer
    PM5CTL0 &= ~LOCKLPM5;                   // Disable the GPIO power-on default high-impedance mode

    PJDIR |= BIT6;                          // Set PJ.6 to output direction，LED2
    PJOUT &= ~BIT0;

    _BIS_SR(LPM0_bits+GIE);


	return 0;
}
